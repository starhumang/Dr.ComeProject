<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.drcome.project.challenge.mapper.ChallengeMapper">
	<select id="getAllTodoList" resultType="com.moddk.swagger.vo.TodoVO">
    
		SELECT * FROM callenge WHERE user_id=#{userId}
	</select>
    
	<select id="getActiveTodoList" resultType="com.drcome.project.challenge.ChallengeVO">
		SELECT * FROM callenge WHERE user_id=#{userId} AND success='N'
	</select>
    
	<select id="getCompletedTodoList" resultType="com.drcome.project.challenge.ChallengeVO">
		SELECT * FROM callenge WHERE user_id=#{userId} AND success='Y'
	</select>
	
	<insert id="addTodoList">
		INSERT INTO callenge(challenge_content, user_id) VALUES (#{challengeContent}, #{userId})
	</insert>
	
	<delete id="deleteTodo">
		DELETE FROM callenge WHERE idx=#{idx} AND user_id=#{userId}
	</delete>
	
	<update id="updateTodoList">
		{
			call updateComYnOfTodoList( #{idx} )
		}
	</update>
</mapper>